            <div>
                <button type="button" class="non-plus" id="1"><img src="images/icons/google.jpg"></button>
                <p class="text-center">23/50</p>
            </div>
            <button type="button" class="plus" id="2"><i class="fa fa-plus-circle fa-4x" aria-hidden="true"></i></button>
