            <% for (var i=0; i<companies.length;i++) { %>
                <%var name = companies[i].companyName.toLowerCase().replace(/ /g,'');%>
                <%var pos  = companies[i].queue.indexOf(studentId);%>
                <%var length = companies[i].queue.length;%>
                <div>
                    <button type="button" class="non-plus" id="1"><img src="images/icons/<%=name%>.jpg"></button>
                    <p class="text-center"><%=pos%>/<%=length%></p>
                </div>

            <%}%>

            <% for (var i=companies.length; i<5;i++) {%>
                <button type="button" class="plus" id="2"><i class="fa fa-plus-circle fa-4x" aria-hidden="true"></i></button>
            <%}%>
        </div>
      </div>
    </div>

    <script type="text/javascript">

        $(".plus").click(function() {
            window.location.replace('/allCompanies');
        });

    </script>
</body>
